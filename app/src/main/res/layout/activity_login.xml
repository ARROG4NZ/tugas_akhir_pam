<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="96dp"
        android:fontFamily="@font/sfpro"
        android:gravity="center_vertical|center_horizontal"
        android:text="Welcome Back"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="164dp"
        android:fontFamily="@font/sfpro"
        android:text="@string/see_you"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="268dp"
        android:layout_marginTop="384dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="Forgot Password?"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/sfpro"
        android:textColor="@color/grey_primaery"/>

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="196dp"
        android:layout_marginTop="540dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="or"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/sfpro"/>


    <EditText
        android:id="@+id/emailAdress"
        android:background="@drawable/login_bg_edit"
        android:layout_width="0dp"
        android:layout_height="53dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="236dp"
        android:layout_marginEnd="28dp"
        android:drawableLeft="@drawable/email_l"
        android:drawablePadding="20dp"
        android:fontFamily="@font/sfpro"
        android:hint="Email Adress"
        android:inputType="textEmailAddress"
        android:paddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/password"
        android:background="@drawable/login_bg_edit"
        android:layout_width="0dp"
        android:layout_height="53dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="312dp"
        android:layout_marginEnd="28dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/password_l"
        android:drawablePadding="20dp"
        android:paddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/sfpro"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="353dp"
        android:layout_height="61dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="436dp"
        android:text="Sign In"
        android:textAllCaps="true"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/sfpro"
        android:backgroundTint="#475AD7"
        android:background="@drawable/button_login_bg"
        android:onClick="sign_in"/>

    <ImageView
        android:id="@+id/logo2"
        android:layout_width="149dp"
        android:layout_height="182dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="540dp"
        android:src="@drawable/img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>